<Window x:Class="KBS2.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KBS2"
        mc:Ignorable="d"
        Title="Selfdriving Car Simulation" Height="700" Width="1300" WindowStartupLocation="CenterScreen">
    <Grid >

        <Canvas HorizontalAlignment="Left" Height="670"  VerticalAlignment="Top" Width="951">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF930101" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <TabControl HorizontalAlignment="Left" Height="670" Margin="950,0,0,0" VerticalAlignment="Top" Width="344" Background="#FF0015FF">
            <TabItem Header="Simulation" Margin="-2,-2,-20,-2" >
                <Grid Background="#FFE5E5E5" Margin="-2.5,0,0,0">

                    <Button x:Name="BtnSelect" Content="Select City" HorizontalAlignment="Left" Margin="22,18,0,0" VerticalAlignment="Top" Width="73" Height="26" Click="BtnSelect_Click" />
                    <TextBox x:Name="TextBoxCity" HorizontalAlignment="Left" Height="26" Margin="113,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128"/>
                    <Button x:Name="BtnLoad" Content="Load" HorizontalAlignment="Left" Margin="263,18,0,0" VerticalAlignment="Top" Width="65" Height="26" Click="BtnLoad_Click"/>

                    <Label Content="City: Swolle" HorizontalAlignment="Left" Margin="121,49,0,0" VerticalAlignment="Top" Width="168" FontSize="18"/>
                    <Label Content="Roads:" HorizontalAlignment="Left" Margin="40,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.036,0.406"/>
                    <Label Content="Intersections:" HorizontalAlignment="Left" Margin="40,105,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.036,0.406"/>
                    <Label Content="Buildings:" HorizontalAlignment="Left" Margin="40,131,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.036,0.406"/>
                    <Label Content="Garages:" HorizontalAlignment="Left" Margin="40,156,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.036,0.406"/>
                    <TextBlock x:Name="TBRoad" HorizontalAlignment="Left" Margin="139,84,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <TextBlock x:Name="TBIntersection" HorizontalAlignment="Left" Margin="139,110,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <TextBlock x:Name="TBBuilding" HorizontalAlignment="Left" Margin="139,136,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <TextBlock x:Name="TBGarage" HorizontalAlignment="Left" Margin="139,161,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>

                    <Button x:Name="BtnStart" Content="Start" HorizontalAlignment="Left" Margin="40,514,0,0" VerticalAlignment="Top" Width="70" Height="40" Background="#FF1BE72C" Click="BtnStart_Click"/>
                    <Button x:Name="BtnPause" Content="Pause" HorizontalAlignment="Left" Margin="138,514,0,0" VerticalAlignment="Top" Width="72" Height="40" Background="#FFDDED1F" RenderTransformOrigin="0.457,-0.147" Click="BtnPause_Click"/>
                    <Button x:Name="BtnStop" Content="Stop" HorizontalAlignment="Left" Margin="234,514,0,0" VerticalAlignment="Top" Width="66" Height="40" Background="Red" Click="BtnStop_Click"/>
                    <Label x:Name="LabelTime" Content="" HorizontalAlignment="Left" Margin="62,568,0,0" VerticalAlignment="Top" Height="57" Width="219"/>

                    <Label Content="Customers" HorizontalAlignment="Left" Margin="121,182,0,0" VerticalAlignment="Top" FontSize="18"/>
                    <Label Content="Succesful rides:" HorizontalAlignment="Left" Margin="40,239,0,0" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="139,218,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <Label Content="Amount:" HorizontalAlignment="Left" Margin="40,344,0,0" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="138,375,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="158" Background="White"/>
                    <TextBlock HorizontalAlignment="Left" Margin="138,400,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="158" Background="White"/>
                    <Label Content="Not in use:" HorizontalAlignment="Left" Margin="40,370,0,0" VerticalAlignment="Top" Width="94"/>
                    <Label Content="Driving:" HorizontalAlignment="Left" Margin="41,395,0,0" VerticalAlignment="Top" Width="90"/>
                    <Label Content="Amount:" HorizontalAlignment="Left" Margin="40,213,0,0" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="139,244,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <Label Content="Rides cancelled:" HorizontalAlignment="Left" Margin="40,265,0,0" VerticalAlignment="Top" Width="98"/>
                    <TextBlock HorizontalAlignment="Left" Margin="139,270,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <Label Content="Deaths:" HorizontalAlignment="Left" Margin="40,290,0,0" VerticalAlignment="Top" Width="91"/>
                    <TextBlock HorizontalAlignment="Left" Margin="139,294,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="150" Background="White"/>
                    <Label Content="Cars" HorizontalAlignment="Left" Margin="121,315,0,0" VerticalAlignment="Top" FontSize="18"/>
                    <TextBlock HorizontalAlignment="Left" Margin="138,353,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="158" Background="White"/>
                    <Label Content="Price" HorizontalAlignment="Left" Margin="121,421,0,0" VerticalAlignment="Top" FontSize="18"/>
                    <Label Content="a + bx" HorizontalAlignment="Left" Margin="101,455,0,0" VerticalAlignment="Top" Width="128"/>
                </Grid>
            </TabItem>
            <TabItem Header="Info" Margin="20,-2,-60,-2">
                <Grid Background="#FFE5E5E5" Margin="-2.5,0,0,0">
                    <Canvas x:Name="CanvasInfo" HorizontalAlignment="Left" Height="642" VerticalAlignment="Top" Width="340"/>
                </Grid>

            </TabItem>
            <TabItem Header="Settings" Margin="60,-2,-90,-2">
                <Grid Background="#FFE5E5E5" Margin="-2.5,0,0,0"/>

            </TabItem>
            <TabItem Header="Results" Margin="90,-2,-125,-2">
                <Grid Background="#FFE5E5E5" Margin="-2.5,0,0,0">
                    <Button x:Name="BtnImport" Content="Import" HorizontalAlignment="Left" Margin="25,22,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="BtnLoadResult" Content="Load" HorizontalAlignment="Left" Margin="230,22,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="BtnShowLatest" Content="Show Latest" HorizontalAlignment="Left" Margin="247,66,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="BtnShow" Content="Show" HorizontalAlignment="Left" Margin="167,66,0,0" VerticalAlignment="Top" Width="75"/>
                    <Label x:Name="LabelResultsSimID" Content="Sim ID:" HorizontalAlignment="Left" Margin="25,66,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
                    <TextBox x:Name="TBResult" HorizontalAlignment="Left" Height="20" Margin="105,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="TBSimID" HorizontalAlignment="Left" Height="20" Margin="105,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="42"/>
                    <Button x:Name="BtnSaveSim" Content="Save Results" HorizontalAlignment="Left" Margin="42,585,0,0" VerticalAlignment="Top" Width="92" Height="32">
                        <Button.ToolTip>Pressing this button saves the results in our database.</Button.ToolTip>
                    </Button>
                    <Button x:Name="BtnExport" Content="Export log" HorizontalAlignment="Left" Margin="213,584,0,0" VerticalAlignment="Top"  Width="92" Height="33"/>
                    <ScrollViewer HorizontalAlignment="Left" Height="482" Margin="10,97,0,0" VerticalAlignment="Top" Width="320">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="City:" Width="150" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Customers" Width="150"/>
                                <Label x:Name="LabelResultCustomer" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Cars" Width="150"/>
                                <Label  x:Name="LabelResultCars" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Customers:" Width="150" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total" Width="150"/>
                                <Label x:Name="LabelResultTotalCustomers" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Avarage age" Width="150"/>
                                <Label  x:Name="LabelResultAvgAge" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Requests" Width="150"/>
                                <Label x:Name="LabelResultRequests" Content=""  Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Cancellation" Width="150"/>
                                <Label x:Name="LabelResultCancel" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Deaths" Width="150"/>
                                <Label x:Name="LabelResultDeaths" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Rides" Width="150"/>
                                <Label x:Name="LabelResultRide" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Distance Total" Width="150"/>
                                <Label x:Name="LabelResultDistanceTotal" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Distance Avarage" Width="150"/>
                                <Label x:Name="LabelResultDistanceAvarage" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Avarage Moral" Width="150"/>
                                <Label x:Name="LabelResultAvgMoral" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Cars:" Width="150" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total" Width="150"/>
                                <Label x:Name="LabelResultTotalCars" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Distance total" Width="150"/>
                                <Label x:Name="LabelResultDistanceTotalCar" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Distance Avarage" Width="150"/>
                                <Label x:Name="LabelResultDistanceAvarageCustomers" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Avarage customers per car" Width="150"/>
                                <Label x:Name="LabelResultAvgCustomers" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Avarage review rating" Width="150"/>
                                <Label x:Name="LabelResultAvgReviewRating" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Price:" Width="150" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total Earned" Width="150"/>
                                <Label x:Name="LabelResultTotalEarned" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Avarage price per ride" Width="150"/>
                                <Label x:Name="LabelResultAvgPrice" Content="" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Time:" Width="150" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Time elapsed" Width="150"/>
                                <Label x:Name="LabelResultTimeElapsed" Content="" Width="150"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

            </TabItem>
        </TabControl>


    </Grid>
</Window>
