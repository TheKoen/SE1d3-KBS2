<UserControl x:Class="KBS2.Visual.Controls.RoadControl"
             x:Name="RoadControlName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBS2.Visual.Controls"
             mc:Ignorable="d" >
    <Grid Background="White">
        <Rectangle x:Name="RectRoad" Fill="#FFC5C5CD" HorizontalAlignment="Left" Height="{Binding ActualHeight, ElementName=RoadControlName}" Stroke="Black" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=RoadControlName}"/>
        

    </Grid>
</UserControl>
