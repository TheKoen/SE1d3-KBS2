<UserControl x:Class="KBS2.Visual.Controls.BuildingControl"
             x:Name="BuildingControlName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KBS2.Visual.Controls"
             mc:Ignorable="d" RenderTransformOrigin="0,0">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="{Binding ActualHeight, ElementName=BuildingControlName}" Stroke="#FF665D5D" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=BuildingControlName}" StrokeThickness="4" Fill="#FFB5B5BB" RenderTransformOrigin="1,1"/>
    </Grid>
</UserControl>
